{% extends "Master/PortalTemplate.html.twig" %}

{% block main %}
    <div class="bg-light pt-5 pb-5">
    </div>
    <div class="container" style="margin-top: -50px;">
        <div class="row">
            <div class="col-md-2 col-lg-3"></div>
            <div class="col-md-8 col-lg-6">
                <div class="card shadow">
                    <div class="card-body">
                        {% if fsc.contact %}
                            <h1 class="h3">
                                <i class="fas fa-lock" aria-hidden="true"></i> {{ trans('access-denied') }}
                            </h1>
                            <p>{{ trans('not-have-access-to-this-page') }}</p>
                        {% else %}
                            <h1 class="h3 mt-2">
                                <i class="fas fa-user-circle" aria-hidden="true"></i>
                                {{ trans('login-to-continue') }}
                            </h1>
                            <p class="text-justify">{{ trans('login-to-continue-p') }}</p>
                            <a class="btn btn-lg btn-primary" href="{{ asset('PortalLogin') ~ '?return=' ~ fsc.canonicalUrlWithParameters }}">
                                {{ trans('login') }}
                            </a>
                        {% endif %}
                    </div>
                    <img src="{{ asset('Dinamic/Assets/Images/PortalSecurity.gif') }}" class="card-img-top" alt="security">
                </div>

            </div>
        </div>
    </div>
{% endblock %}