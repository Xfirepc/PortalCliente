<view>
    <columns>
        <group name="portal-cliente" title="client-portal" icon="fas fa-chalkboard-user" numcolumns="12" valign="bottom">
            <column name="pc-nick" title="nick" order="100">
                <widget type="text" fieldname="pc_nick" maxlength="100"/>
            </column>
            <column name="new-password" order="110">
                <widget type="password" fieldname="new_password" maxlength="100"/>
            </column>
            <column name="repeat-password" order="110">
                <widget type="password" fieldname="repeat_password" maxlength="100"/>
            </column>
            <column name="last-login" order="120">
                <widget type="datetime" fieldname="pc_last_login" readonly="true"/>
            </column>
            <column name="last-ip" order="130">
                <widget type="text" fieldname="pc_last_ip" readonly="true"/>
            </column>
            <column name="last-browser" numcolumns="12" order="140">
                <widget type="textarea" fieldname="pc_last_browser" readonly="true"/>
            </column>
        </group>
        <group name="portal-cliente-advanced" numcolumns="12" valign="bottom">
            <column name="active" order="100">
                <widget type="checkbox" fieldname="pc_active"/>
            </column>
            <column name="allow-pay" order="110">
                <widget type="checkbox" fieldname="pc_allow_pay"/>
            </column>
            <column name="allow-show-files" order="120">
                <widget type="checkbox" fieldname="pc_allow_show_files"/>
            </column>
            <column name="allow-show-estimations" order="130">
                <widget type="checkbox" fieldname="pc_allow_show_estimation"/>
            </column>
            <column name="allow-show-orders" order="140">
                <widget type="checkbox" fieldname="pc_allow_show_order"/>
            </column>
            <column name="allow-show-invoices" order="150">
                <widget type="checkbox" fieldname="pc_allow_show_invoice"/>
            </column>
        </group>
    </columns>
</view>